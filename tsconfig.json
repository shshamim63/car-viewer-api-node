{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./dist",
        "resolveJsonModule": true,
        "typeRoots": ["./src/types", "./node_modules/@types"]
    },
    "lib": ["es2015"],
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "**/*.test.ts"]
}
